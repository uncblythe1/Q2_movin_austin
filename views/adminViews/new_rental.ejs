<% include ../partials/header.ejs %>
<body class="bg-div">
    

<form class="form-horizontal" action="/truck_rentals" method = "POST">
        <fieldset id='form-field'>
        <legend id= "newRentalFormTitle">New Truck Rental</legend>
        
        <div class="form-group">
                <label class="col-md-4 control-label" for="logo">Logo</label>  
                <div class="col-md-4">
                <input id="logo" name="logo" type="text" placeholder="Enter Logo URL" class="form-control input-md">
                </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label" for="name">Company Name</label>  
          <div class="col-md-4">
          <input id="name" name="name" required= "true" type="text" placeholder="Enter Name" class="form-control input-md">
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="address">Address</label>  
          <div class="col-md-4">
          <input id="address" name="address" required= "true" type="text" placeholder="Enter Code Names" class="form-control input-md">  
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="phone">Phone</label>  
          <div class="col-md-4">
          <input id="phone" name="phone" type="text" required= "true" placeholder="Enter Phone Number" class="form-control input-md">  
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="website">Website</label>  
          <div class="col-md-4">
          <input id="website" name="website" required= "true" type="text" placeholder="Enter Website URL" class="form-control input-md">  
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="yelpRating">Yelp Rating</label>  
          <div class="col-md-4">
          <input id="yelpRating" name="yelpRating" required= "true" type="text" placeholder="Enter Yelp Rating" class="form-control input-md">  
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="price">Yelp Reviews</label>  
          <div class="col-md-4">
          <input id="yelpReviews" name="yelpReviews" required= "true" type="text" placeholder="Enter Yelp Reviews" class="form-control input-md">  
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="newRental"></label>
          <div class="col-md-4">
                <button type="submit" class="form-submit" >Submit</button>
          </div>
        </div>
        
        </fieldset>
        </form>
    </body>


</html>